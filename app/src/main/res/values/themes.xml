<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TinkuySabor" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_icon_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.TinkuySabor</item>
    </style>

    <style name="Theme.TinkuySabor" parent="Base.Theme.TinkuySabor" />

    <style name="Base.Theme.Login" parent="Base.Theme.TinkuySabor">
        <item name="colorPrimary">@color/blue_600</item>
    </style>

    <!-- Body -->
    <style name="Body_1">
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Body_2">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:fontFamily">@font/semi_bold</item>
    </style>

    <style name="Body_3">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <!-- Component -->
    <style name="Button">
        <item name="android:layout_height">@dimen/dimen_60</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_700</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="cornerRadius">@dimen/dimen_15</item>
    </style>

    <!-- Dialog theme -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorOnSurface">@color/blue_700</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>