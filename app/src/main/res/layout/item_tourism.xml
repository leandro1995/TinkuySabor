<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_3"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_3"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/dimen_5"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/blue_700"
            app:strokeWidth="@dimen/dimen_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/tour_simple_drawee_View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        fresco:roundBottomEnd="true"
                        fresco:roundBottomLeft="true"
                        fresco:roundBottomRight="true"
                        fresco:roundBottomStart="true"
                        fresco:roundTopEnd="true"
                        fresco:roundTopLeft="true"
                        fresco:roundTopRight="true"
                        fresco:roundTopStart="true"
                        fresco:roundedCornerRadius="@dimen/dimen_15"
                        fresco:roundingBorderColor="@color/blue_700"
                        fresco:roundingBorderWidth="@dimen/dimen_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_text"
                        style="@style/Body_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/description_text"
                        style="@style/Body_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/timetable_text"
                        style="@style/Body_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/black" />

                    <ImageButton
                        android:id="@+id/tourism_detail_image_button"
                        style="@style/Button.Circle"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:scaleType="fitXY"
                        fresco:srcCompat="@drawable/ic_arrow_button"
                        tools:ignore="ContentDescription,RtlHardcoded" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>